{
  "name": "foo-monorepo",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "tsc": "tsc -b",
    "watch:tsc": "tsc --build --watch --preserveWatchOutput",
    "build:js": "yarn wsrun --stages build",
    "build": "npm-run-all clean tsc build:js",
    "clean": "rm -rf ./packages/*/dist & rm -rf ./packages/*/types",
    "app:server": "node ./scripts/createEmptyFile.js --packageName=foo-app-server --output=index.js && nodemon --delay 250ms --watch packages/foo-app/dist --exec node packages/foo-app-server/dist/index.js",
    "app:watch": "yarn wsrun --no-prefix -p @foo/foo-app-server -r watch",
    "start": "npm-run-all --parallel watch:tsc app:watch app:server"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.7",
    "babel-loader": "^8.0.6",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.7.4",
    "webpack": "^5.0.0-beta.11",
    "webpack-cli": "^3.3.10",
    "wsrun": "^5.2.0"
  },
  "dependencies": {}
}
